<div class="col-md-6 col-lg-3 mb-3">
  <div class="usage-stat">
    <div class="d-flex justify-content-between align-items-center mb-2">
      <span class="text-muted small"><%= resource_label %></span>
      <%= render Shared::BadgeComponent.new(text: badge_text, variant: "secondary") %>
    </div>

    <% if unlimited? %>
      <div class="text-success small">
        <%= render Shared::IconComponent.new(name: "infinity") %>
        <%= t('usage_limits.unlimited') %>
      </div>
    <% else %>
      <div class="progress" style="height: 8px;">
        <div class="progress-bar <%= progress_color %>"
             role="progressbar"
             style="width: <%= [percentage, 100].min %>%"
             aria-valuenow="<%= percentage %>"
             aria-valuemin="0"
             aria-valuemax="100">
        </div>
      </div>
      <small class="text-muted"><%= percentage %>% used</small>
    <% end %>
  </div>
</div>
