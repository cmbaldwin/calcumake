<div class="<%= col_classes %>">
    <div class="card h-100">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-primary"><%= client.name %></h5>
            <% if has_company_name? %>
                <%= render Shared::BadgeComponent.new(text: company_name_badge_text, variant: :success) %>
            <% end %>
        </div>

        <div class="card-body">
            <div class="mb-3">
                <% if has_company_name? %>
                    <div class="d-flex justify-content-between py-2 border-bottom">
                        <span class="fw-medium text-muted"><%= I18n.t('clients.fields.company_name') %>:</span>
                        <span class="fw-bold"><%= company_name_display %></span>
                    </div>
                <% end %>
                <% if has_email? %>
                    <div class="d-flex justify-content-between py-2 border-bottom">
                        <span class="fw-medium text-muted"><%= I18n.t('clients.fields.email') %>:</span>
                        <span class="fw-bold"><%= email_display %></span>
                    </div>
                <% end %>
                <% if has_phone? %>
                    <div class="d-flex justify-content-between py-2 border-bottom">
                        <span class="fw-medium text-muted"><%= I18n.t('clients.fields.phone') %>:</span>
                        <span class="fw-bold"><%= phone_display %></span>
                    </div>
                <% end %>
                <div class="d-flex justify-content-between py-2">
                    <span class="fw-medium text-muted"><%= I18n.t('clients.card.invoices') %>:</span>
                    <span class="fw-bold"><%= invoices_count %></span>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <div class="d-flex justify-content-center">
                <div class="dropdown">
                    <button <%= tag.attributes(dropdown_button_attrs) %>>
                        <%= I18n.t('actions.actions') %>
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <%= link_to I18n.t('actions.view'), client, class: "dropdown-item", data: { turbo_frame: "_top" } %>
                        </li>
                        <li>
                            <%= link_to I18n.t('actions.edit'), helpers.edit_client_path(client), class: "dropdown-item", data: { turbo_frame: "_top" } %>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <%= link_to I18n.t('actions.delete'), client, **delete_link_attrs %>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
