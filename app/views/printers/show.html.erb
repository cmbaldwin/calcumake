<div class="printer-show-container">
  <div class="printer-header">
    <div class="printer-title">
      <h1><%= @printer.name %></h1>
      <span class="manufacturer-badge"><%= @printer.manufacturer %></span>
    </div>
    <div class="printer-actions">
      <%= link_to t('actions.edit'), edit_printer_path(@printer), class: "primary-button" %>
      <%= link_to t('actions.back'), printers_path, class: "secondary-button" %>
    </div>
  </div>

  <div class="printer-content">
    <!-- Printer Specifications -->
    <div class="specs-section">
      <h2><%= t('printers.show.specifications') %></h2>
      <div class="specs-grid">
        <div class="spec-card">
          <div class="spec-icon">‚ö°</div>
          <div class="spec-details">
            <label><%= t('printers.card.power_consumption') %></label>
            <span><%= @printer.power_consumption %>W</span>
          </div>
        </div>

        <div class="spec-card">
          <div class="spec-icon">üí∞</div>
          <div class="spec-details">
            <label><%= t('printers.card.cost') %></label>
            <span><%= currency_symbol(current_user.default_currency) %><%= number_with_delimiter(@printer.cost) %></span>
          </div>
        </div>

        <div class="spec-card">
          <div class="spec-icon">‚è∞</div>
          <div class="spec-details">
            <label><%= t('printers.card.daily_usage') %></label>
            <span><%= @printer.daily_usage_hours %> <%= t('printers.card.hours') %></span>
          </div>
        </div>

        <div class="spec-card">
          <div class="spec-icon">üéØ</div>
          <div class="spec-details">
            <label><%= t('printers.card.payoff_goal') %></label>
            <span><%= @printer.payoff_goal_years %> <%= t('printers.card.years') %></span>
          </div>
        </div>

        <% if @printer.repair_cost_percentage && @printer.repair_cost_percentage > 0 %>
        <div class="spec-card">
          <div class="spec-icon">üîß</div>
          <div class="spec-details">
            <label><%= t('printers.show.repair_cost') %></label>
            <span><%= @printer.repair_cost_percentage %>%</span>
          </div>
        </div>
        <% end %>

        <div class="spec-card">
          <div class="spec-icon">üìÖ</div>
          <div class="spec-details">
            <label><%= t('printers.show.date_added') %></label>
            <span><%= @printer.date_added&.strftime('%B %d, %Y') || t('printers.show.not_set') %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Financial Status -->
    <div class="financial-section">
      <h2><%= t('printers.show.financial_status') %></h2>
      <div class="status-cards">
        <div class="status-card <%= @printer.paid_off? ? 'paid-off' : 'in-progress' %>">
          <div class="status-icon">
            <%= @printer.paid_off? ? '‚úÖ' : '‚è≥' %>
          </div>
          <div class="status-content">
            <% if @printer.paid_off? %>
              <h3><%= t('printers.card.paid_off') %></h3>
              <p><%= t('printers.show.fully_paid_off') %></p>
            <% else %>
              <h3><%= t('printers.show.payoff_progress') %></h3>
              <p><%= t('printers.card.months_to_payoff', months: @printer.months_to_payoff) %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Print Jobs -->
    <div class="print-jobs-section">
      <div class="section-header">
        <h2><%= t('printers.show.print_jobs') %></h2>
        <%= link_to t('printers.show.new_print_job'), new_print_pricing_path(printer_id: @printer.id), class: "primary-button" %>
      </div>

      <% if @printer.print_pricings.any? %>
        <div class="print-jobs-list">
          <% @printer.print_pricings.order(created_at: :desc).limit(10).each do |print_pricing| %>
            <div class="print-job-card">
              <div class="job-info">
                <h4><%= print_pricing.job_name %></h4>
                <div class="job-details">
                  <span class="detail-item">
                    <strong><%= t('print_pricing.sections.plates') %>:</strong> <%= print_pricing.plates.count %>
                  </span>
                  <span class="detail-item">
                    <strong><%= t('common.hours') %>:</strong> <%= format_print_time(print_pricing) %>
                  </span>
                  <span class="detail-item">
                    <strong>Weight:</strong> <%= print_pricing.plates.sum(&:filament_weight).round(1) %>g
                  </span>
                  <% if print_pricing.times_printed && print_pricing.times_printed > 1 %>
                    <span class="detail-item">
                      <strong><%= t('print_pricing.times_printed') %>:</strong> <%= print_pricing.times_printed %>
                    </span>
                  <% end %>
                </div>
              </div>
              <div class="job-pricing">
                <div class="total-price">
                  <%= currency_symbol(current_user.default_currency) %><%= print_pricing.final_price %>
                </div>
                <div class="job-actions">
                  <%= link_to t('actions.view'), print_pricing, class: "secondary-button small" %>
                </div>
              </div>
            </div>
          <% end %>

          <% if @printer.print_pricings.count > 10 %>
            <div class="show-more">
              <%= link_to t('printers.show.view_all_jobs', count: @printer.print_pricings.count),
                  print_pricings_path(printer_id: @printer.id), class: "secondary-button" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="empty-jobs">
          <div class="empty-icon">üìÑ</div>
          <h3><%= t('printers.show.no_print_jobs') %></h3>
          <p><%= t('printers.show.no_print_jobs_description') %></p>
          <%= link_to t('printers.show.create_first_job'), new_print_pricing_path(printer_id: @printer.id), class: "primary-button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
