<!-- Hero Section -->
<div class="text-center mb-5">
    <h3 class="display-5 fw-bold text-primary mb-3"><%= t('printers.index.title') %></h3>
    <p class="lead text-muted mb-4"><%= t('printers.index.subtitle') %></p>
    <%= link_to t('printers.index.add_new'), new_printer_path, class: "btn btn-primary btn-lg" %>
</div>

<% if @printers.any? %>
<div class="row g-4">
    <% @printers.each do |printer| %>
        <%= render Cards::PrinterCardComponent.new(printer: printer, current_user: current_user) %>
    <% end %>
</div>
<% else %>
<!-- Empty State -->
<div class="text-center py-5">
    <div class="card border-0 bg-light">
        <div class="card-body py-5">
            <h3 class="text-muted mb-3"><%= t('printers.index.empty_state.title') %></h3>
            <p class="text-muted mb-4"><%= t('printers.index.empty_state.description') %></p>
            <%= link_to t('printers.index.empty_state.add_first'), new_printer_path, class: "btn btn-primary" %>
        </div>
    </div>
</div>
<% end %>