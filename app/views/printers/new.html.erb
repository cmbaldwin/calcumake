<div class="page-header">
  <h1>Add New Printer</h1>
  <p>Register your 3D printer specifications for accurate cost calculations</p>
</div>

<%= form_with model: @printer, local: true, html: { class: "printer-form" } do |form| %>
  <% if @printer.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(@printer.errors.count, "error") %> prohibited this printer from being saved:</h3>
      <ul>
        <% @printer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-grid">
    <!-- Basic Information -->
    <div class="form-card">
      <h3>Basic Information</h3>
      <div class="field-group">
        <label>Printer Name</label>
        <%= form.text_field :name, placeholder: "e.g., My Prusa i3 MK3S+" %>
      </div>
      <div class="field-group">
        <label>Manufacturer</label>
        <%= form.select :manufacturer, 
            options_for_select(Printer::MANUFACTURERS.map { |m| [m, m] }, @printer.manufacturer),
            { prompt: "Select manufacturer" } %>
      </div>
    </div>

    <!-- Technical Specifications -->
    <div class="form-card">
      <h3>Technical Specifications</h3>
      <div class="field-group">
        <label>Power Consumption (Watts)</label>
        <%= form.number_field :power_consumption, step: 1, placeholder: "200" %>
        <small>Typical range: 50W (small printers) to 500W (large printers)</small>
      </div>
    </div>

    <!-- Financial Information -->
    <div class="form-card">
      <h3>Financial Information</h3>
      <div class="field-group currency-field">
        <label>Printer Cost</label>
        <div class="currency-input">
          <span class="currency-symbol"><%= currency_symbol(current_user.default_currency) %></span>
          <%= form.number_field :cost, step: 0.01, placeholder: "500.00" %>
        </div>
      </div>
      <div class="field-group">
        <label>Payoff Goal (Years)</label>
        <%= form.number_field :payoff_goal_years, min: 1, step: 1, placeholder: "3" %>
        <small>How many years do you want to recoup the printer cost?</small>
      </div>
    </div>

    <!-- Usage Information -->
    <div class="form-card">
      <h3>Usage Information</h3>
      <div class="field-group">
        <label>Daily Usage (Hours)</label>
        <%= form.number_field :daily_usage_hours, min: 1, step: 1, placeholder: "8" %>
        <small>Average hours per day you plan to use this printer</small>
      </div>
      <div class="field-group">
        <label>Repair Cost Factor (%)</label>
        <%= form.number_field :repair_cost_percentage, step: 0.1, placeholder: "5.0" %>
        <small>Additional cost factor for maintenance and repairs</small>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit "Add Printer", class: "primary-button" %>
    <%= link_to "Cancel", printers_path, class: "secondary-button" %>
  </div>
<% end %>

<style>
.page-header {
  text-align: center;
  margin-bottom: 2rem;
}

.page-header h1 {
  background: linear-gradient(135deg, #c8102e 0%, #d2691e 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-size: 2.5rem;
  font-weight: 800;
  margin-bottom: 0.5rem;
}

.printer-form {
  max-width: 1000px;
  margin: 0 auto;
}

.form-grid {
  display: grid;
  gap: 2rem;
  grid-template-columns: 1fr;
}

