  margin: 0 0 1.5rem 0;
  color: #c8102e;
  font-size: 1.3rem;
  font-weight: 600;
  border-bottom: 2px solid #9caf88;
  padding-bottom: 0.5rem;
}

.field-group {
  margin-bottom: 1.5rem;
}

.field-group:last-child {
  margin-bottom: 0;
}

.field-group label {
  display: block;
  font-weight: 600;
