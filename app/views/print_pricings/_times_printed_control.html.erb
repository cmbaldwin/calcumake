<div class="times-printed-control" id="times_printed_<%= pricing.id %>" data-controller="times-printed">
  <%= button_to decrement_times_printed_print_pricing_path(pricing),
      method: :patch,
      class: "increment-btn decrement-btn",
      title: "Decrease times printed",
      form_class: "inline-form",
      data: { action: "click->times-printed#submit" } do %>
    ▼
  <% end %>
  <span class="times-printed-value"><%= pricing.times_printed || 0 %></span>
  <%= button_to increment_times_printed_print_pricing_path(pricing),
      method: :patch,
      class: "increment-btn increment-btn-up",
      title: "Increase times printed",
      form_class: "inline-form",
      data: { action: "click->times-printed#submit" } do %>
    ▲
  <% end %>
</div>