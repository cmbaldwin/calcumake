<%= render Forms::FormSectionComponent.new(
  title: t('print_pricing.sections.basic_info'),
  wrapper_class: "col-12",
  body_class: "row g-3"
) do %>
  <div class="col-md-6">
    <%= f.label :job_name, class: "form-label" %>
    <%= f.text_field :job_name, class: "form-control", placeholder: t('print_pricing.fields.job_name_placeholder') %>
  </div>

  <div class="col-md-6" data-controller="printer-technology-sync">
    <%= turbo_frame_tag "printer_select_frame" do %>
      <%= f.label :printer_id, t('print_pricing.fields.select_printer'), class: "form-label" %>
      <%= f.select :printer_id,
          options_for_select(
            current_user.printers.map { |p| [p.name, p.id, { 'data-technology' => p.material_technology }] },
            f.object.printer_id
          ),
          { prompt: t('print_pricing.fields.select_printer_prompt') },
          {
            class: "form-select",
            data: {
              printer_technology_sync_target: "select",
              action: "change->printer-technology-sync#printerChanged"
            }
          } %>
    <% end %>
    <div class="form-text mt-2">
      <%= t('print_pricing.fields.no_printer_help') %>
      <%= link_to new_printer_path(format: :turbo_stream),
          class: "btn btn-sm btn-outline-primary ms-2",
          data: {
            controller: "modal-link",
            action: "click->modal-link#open",
            turbo_frame: "modal_content"
          } do %>
        <i class="bi bi-plus-circle"></i>
        <%= t('print_pricing.fields.add_printer_link') %>
      <% end %>
    </div>
  </div>

  <!-- 3MF File Import -->
  <%# TODO: After merging master, refactor to Forms::FileUploadFieldComponent
      following the ViewComponent pattern. See docs/3MF_UPLOAD_COMPONENT_REFACTOR.md %>
  <div class="col-12">
    <div class="card bg-light">
      <div class="card-body">
        <h6 class="card-title mb-3">
          <i class="bi bi-file-earmark-zip"></i>
          <%= t('print_pricing.three_mf.import_title') %>
        </h6>

        <%= f.label :three_mf_file, t('print_pricing.three_mf.file_label'), class: "form-label" %>
        <%= f.file_field :three_mf_file,
            class: "form-control",
            accept: ".3mf",
            data: {
              controller: "three-mf-upload",
              action: "change->three-mf-upload#handleFileSelect"
            } %>

        <div class="form-text mt-2">
          <%= t('print_pricing.three_mf.help_text') %>
        </div>

        <% if f.object.three_mf_file.attached? %>
          <div class="mt-3 p-2 border rounded bg-white" id="three-mf-status">
            <div class="d-flex align-items-center gap-2">
              <i class="bi bi-file-earmark-check text-success"></i>
              <span class="flex-grow-1">
                <strong><%= f.object.three_mf_file.filename %></strong>
                <small class="text-muted d-block">
                  <%= number_to_human_size(f.object.three_mf_file.byte_size) %>
                </small>
              </span>

              <% if f.object.three_mf_processing? %>
                <%= render Shared::BadgeComponent.new(
                  text: t('print_pricing.three_mf.status.processing'),
                  variant: "info"
                ) do %>
                  <span class="spinner-border spinner-border-sm me-1"></span>
                <% end %>
              <% elsif f.object.three_mf_completed? %>
                <%= render Shared::BadgeComponent.new(
                  text: t('print_pricing.three_mf.status.completed'),
                  variant: "success",
                  icon: "check-circle"
                ) %>
              <% elsif f.object.three_mf_failed? %>
                <%= render Shared::BadgeComponent.new(
                  text: t('print_pricing.three_mf.status.failed'),
                  variant: "danger",
                  icon: "exclamation-circle"
                ) %>
              <% end %>
            </div>

            <% if f.object.three_mf_failed? && f.object.three_mf_import_error.present? %>
              <%= render Shared::AlertComponent.new(
                variant: "danger",
                dismissible: false,
                html_options: { class: "mt-2 mb-0 small" }
              ) do %>
                <%= f.object.three_mf_import_error %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <% if f.object.new_record? %>
    <%= render Forms::CheckboxFieldComponent.new(
      form: f,
      attribute: :start_with_one_print,
      label: t('print_pricing.fields.start_with_one_print'),
      hint: t('print_pricing.fields.start_with_one_print_help'),
      wrapper_class: "col-12",
      options: { checked: false, class: "form-switch" }
    ) %>
  <% end %>
<% end %>
