<%= render Forms::FormSectionComponent.new(
  title: t('print_pricing.sections.other_costs_tax'),
  wrapper_class: "col-md-6",
  card_class: "card h-100",
  body_class: "row g-3"
) do %>
  <%= render Forms::FieldComponent.new(
    form: f,
    attribute: :units,
    type: :number,
    label: t('print_pricing.fields.units'),
    wrapper_class: "col-12",
    options: { min: 1, step: 1, placeholder: t('print_pricing.fields.units_placeholder') }
  ) %>

  <%= render Forms::FieldComponent.new(
    form: f,
    attribute: :failure_rate_percentage,
    type: :number,
    label: t('print_pricing.fields.failure_rate_percentage'),
    wrapper_class: "col-12",
    options: { min: 0, max: 100, step: 0.1, placeholder: t('print_pricing.fields.failure_rate_placeholder') }
  ) %>

  <%= render Forms::NumberFieldWithAddonComponent.new(
    form: f,
    attribute: :other_costs,
    label: t('print_pricing.fields.other_costs'),
    prepend: currency_symbol(current_user.default_currency),
    step: 0.01,
    placeholder: t('print_pricing.fields.other_costs_placeholder'),
    wrapper_class: "col-12"
  ) %>

  <%= render Forms::FieldComponent.new(
    form: f,
    attribute: :vat_percentage,
    type: :number,
    label: t('print_pricing.fields.vat_percentage'),
    wrapper_class: "col-12",
    options: { step: 0.1, placeholder: t('print_pricing.fields.vat_placeholder') }
  ) %>
<% end %>
