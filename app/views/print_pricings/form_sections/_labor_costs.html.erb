<%= render Forms::FormSectionComponent.new(
  title: t('print_pricing.sections.labor'),
  wrapper_class: "col-md-6",
  card_class: "card h-100",
  body_class: "row g-3"
) do %>
  <%= render Forms::FieldComponent.new(
    form: f,
    attribute: :prep_time_minutes,
    type: :number,
    label: t('print_pricing.fields.prep_time_minutes'),
    info_popup_key: "info_popups.print_pricings.plate.prep_time",
    wrapper_class: "col-6",
    options: { min: 0, step: 1, placeholder: t('print_pricing.fields.prep_time_placeholder') }
  ) %>

  <%= render Forms::NumberFieldWithAddonComponent.new(
    form: f,
    attribute: :prep_cost_per_hour,
    label: t('print_pricing.fields.prep_cost_per_hour'),
    info_popup_key: "info_popups.print_pricings.plate.prep_cost_per_hour",
    prepend: currency_symbol(current_user.default_currency),
    step: 0.01,
    placeholder: t('print_pricing.fields.prep_cost_placeholder'),
    wrapper_class: "col-6"
  ) %>

  <%= render Forms::FieldComponent.new(
    form: f,
    attribute: :postprocessing_time_minutes,
    type: :number,
    label: t('print_pricing.fields.postprocessing_time_minutes'),
    info_popup_key: "info_popups.print_pricings.plate.postprocessing_time",
    wrapper_class: "col-6",
    options: { min: 0, step: 1, placeholder: t('print_pricing.fields.postprocessing_time_placeholder') }
  ) %>

  <%= render Forms::NumberFieldWithAddonComponent.new(
    form: f,
    attribute: :postprocessing_cost_per_hour,
    label: t('print_pricing.fields.postprocessing_cost_per_hour'),
    info_popup_key: "info_popups.print_pricings.plate.postprocessing_cost_per_hour",
    prepend: currency_symbol(current_user.default_currency),
    step: 0.01,
    placeholder: t('print_pricing.fields.postprocessing_cost_placeholder'),
    wrapper_class: "col-6"
  ) %>
<% end %>
