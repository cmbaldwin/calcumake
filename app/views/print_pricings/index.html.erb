<!-- Hero Section -->
<div class="text-center mb-5">
    <h3 class="display-5 fw-bold text-primary mb-3"><%= t('print_pricing.index.title') %></h3>
    <p class="lead text-muted mb-4">
        <%= t('print_pricing.index.subtitle') %>
    </p>
    <%= link_to t('print_pricing.index.create_new'), new_print_pricing_path, class: "btn btn-primary btn-lg" %>
</div>

<!-- Search Section -->
<div class="mb-4">
    <%= form_with(url: print_pricings_path, method: :get, data: { turbo_frame: :print_pricings_results }) do |form| %>
        <%= form.text_field :query,
            value: params[:query],
            placeholder: t('print_pricing.index.search_placeholder'),
            class: "form-control",
            oninput: "this.form.requestSubmit()" %>
    <% end %>
</div>

<%= turbo_frame_tag :print_pricings_results do %>
    <% if @print_pricings.any? %>
        <%= turbo_frame_tag "stats_cards" do %>
            <div id="stats_cards_content">
                <%= render "shared/components/stats_cards", print_pricings: @print_pricings %>
            </div>
        <% end %>

        <div class="row g-3">
            <% @print_pricings.each do |pricing| %>
                <%= render "shared/components/pricing_card", pricing: pricing %>
            <% end %>
        </div>
    <% else %>
        <!-- Empty State or No Results -->
        <div class="text-center py-5">
            <div class="card border-0 bg-light">
                <div class="card-body py-5">
                    <% if params[:query].present? %>
                        <h3 class="text-muted mb-3"><%= t('print_pricing.index.no_results.title') %></h3>
                        <p class="text-muted mb-4">
                            <%= t('print_pricing.index.no_results.description', query: params[:query]) %>
                        </p>
                    <% else %>
                        <h3 class="text-muted mb-3"><%= t('print_pricing.index.empty_state.title') %></h3>
                        <p class="text-muted mb-4">
                            <%= t('print_pricing.index.empty_state.description') %>
                        </p>
                        <%= link_to t('print_pricing.index.create_new'), new_print_pricing_path, class: "btn btn-primary" %>
                    <% end %>
                </div>
            </div>
        </div>
    <% end %>
<% end %>