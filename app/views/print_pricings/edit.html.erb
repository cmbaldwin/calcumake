<% content_for :body_class, "pricing-form-page" %>

<div class="calculator-header">
  <h1>Edit Print Pricing</h1>
  <p>Update your 3D printing cost calculation</p>
</div>

<%= form_with model: @print_pricing, local: true, html: {
  id: "pricing-form",
  class: "compact-form"
} do |form| %>
  <% if @print_pricing.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(@print_pricing.errors.count, "error") %> prohibited this pricing from being saved:</h3>
      <ul>
        <% @print_pricing.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-grid">
    <!-- Basic Information -->
    <div class="form-card basic-info">
      <h3>Basic Information</h3>
      <div class="field-group">
        <label for="job_name">Job Name</label>
        <%= form.text_field :job_name, placeholder: "e.g., Miniature Model" %>
      </div>
      <div class="field-group">
        <label for="printer"><%= t('print_pricing.fields.select_printer') %></label>
        <%= form.select :printer_id,
            options_from_collection_for_select(current_user.printers, :id, :name, @print_pricing.printer_id),
            { prompt: t('print_pricing.fields.select_printer_prompt') },
            { id: "printer-select" } %>
        <small>
          <%= t('print_pricing.fields.no_printer_help') %>
          <%= link_to t('print_pricing.fields.add_printer_link'), new_printer_path,
              class: "inline-link",
              data: {
                confirm: "Warning: You will lose any unsaved progress on this form. Continue?"
              } %>
        </small>
      </div>
    </div>

    <!-- Print Time & Material -->
    <div class="form-card material-info">
      <h3>Print Time & Material</h3>
      <div class="time-fields">
        <div class="field-group">
          <label>Hours</label>
          <%= form.number_field :printing_time_hours, min: 0, step: 1, value: @print_pricing.printing_time_hours || 0 %>
        </div>
        <div class="field-group">
          <label>Minutes</label>
          <%= form.number_field :printing_time_minutes, min: 0, max: 59, step: 1, value: @print_pricing.printing_time_minutes || 0 %>
        </div>
      </div>
      <div class="field-group">
        <label>Filament Weight (g)</label>
        <%= form.number_field :filament_weight, step: 0.1, placeholder: "36" %>
      </div>
      <div class="field-group">
        <label>Filament Type</label>
        <%= form.select :filament_type,
            options_for_select([
              ['PLA', 'PLA'],
              ['ABS', 'ABS'],
              ['PETG', 'PETG'],
              ['TPU', 'TPU'],
              ['ASA', 'ASA'],
              ['Other', 'Other']
            ], @print_pricing.filament_type),
            { prompt: "Select type" } %>
      </div>
    </div>

    <!-- Filament Costs -->
    <div class="form-card filament-cost">
      <h3>Filament Details</h3>
      <div class="field-group currency-field">
        <label>Spool Price</label>
        <div class="currency-input">
          <span class="currency-symbol"><%= currency_symbol(current_user.default_currency) %></span>
          <%= form.number_field :spool_price, step: 0.01, placeholder: "25.00" %>
        </div>
      </div>
      <div class="field-group">
        <label>Spool Weight (g)</label>
        <%= form.number_field :spool_weight, step: 0.1, placeholder: "1000" %>
      </div>
      <div class="field-group">
        <label>Markup (%)</label>
        <%= form.number_field :markup_percentage, step: 0.1, placeholder: "20" %>
      </div>
    </div>

    <!-- Labor Cost -->
    <div class="form-card labor-cost">
      <h3>Labor</h3>
      <div class="field-group">
        <label>Prep Time (min)</label>
        <%= form.number_field :prep_time_minutes, min: 0, step: 1, placeholder: "30" %>
      </div>
      <div class="field-group currency-field">
        <label>Prep Cost/Hour</label>
        <div class="currency-input">
          <span class="currency-symbol"><%= currency_symbol(current_user.default_currency) %></span>
          <%= form.number_field :prep_cost_per_hour, step: 0.01, placeholder: "20.00" %>
        </div>
      </div>
      <div class="field-group">
        <label>Post-Process Time (min)</label>
        <%= form.number_field :postprocessing_time_minutes, min: 0, step: 1, placeholder: "30" %>
      </div>
      <div class="field-group currency-field">
        <label>Post-Process Cost/Hour</label>
        <div class="currency-input">
          <span class="currency-symbol"><%= currency_symbol(current_user.default_currency) %></span>
          <%= form.number_field :postprocessing_cost_per_hour, step: 0.01, placeholder: "20.00" %>
        </div>
      </div>
    </div>

    <!-- Other Costs -->
    <div class="form-card other-costs">
      <h3>Other Costs & Tax</h3>
      <div class="field-group currency-field">
        <label>Other Costs</label>
        <div class="currency-input">
          <span class="currency-symbol"><%= currency_symbol(current_user.default_currency) %></span>
          <%= form.number_field :other_costs, step: 0.01, placeholder: "0.00" %>
        </div>
      </div>
      <div class="field-group">
        <label>VAT (%)</label>
        <%= form.number_field :vat_percentage, step: 0.1, placeholder: "10" %>
      </div>
    </div>

  </div>

  <div class="form-actions">
    <%= form.submit "Update Pricing", class: "primary-button" %>
    <%= link_to "Cancel", print_pricings_path, class: "secondary-button" %>
  </div>
<% end %>

<style>
.calculator-header {
  text-align: center;
  margin-bottom: 1rem;
}

.calculator-header h1 {
  color: #c8102e;
  font-size: 2rem;
  font-weight: 800;
  margin-bottom: 0.25rem;
}

.compact-form {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0;
  width: 100%;
  box-sizing: border-box;
}

.form-grid {
  display: grid;
  gap: 1rem;
  grid-template-columns: 1fr;
}

/* Mobile-first responsive grid */
@media (min-width: 768px) {
  .form-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .basic-info {
    grid-column: 1 / -1;
  }
}

@media (min-width: 1024px) {
  .form-grid {
    grid-template-columns: repeat(3, 1fr);
  }

  .basic-info {
    grid-column: 1 / -1;
  }
}

.form-card {
  background: white;
  border-radius: 8px;
  padding: 1rem;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
  border: 1px solid #e0e0e0;
  width: 100%;
  box-sizing: border-box;
  min-width: 0;
}

.form-card h3 {
  margin: 0 0 0.75rem 0;
  color: #c8102e;
  font-size: 1.1rem;
  font-weight: 600;
  border-bottom: 2px solid #9caf88;
  padding-bottom: 0.35rem;
  text-align: center;
}

.field-group {
  margin-bottom: 0.75rem;
}

.field-group:last-of-type {
  margin-bottom: 0;
}

.field-group label {
  display: block;
  font-weight: 500;
  color: #333;
  margin-bottom: 0.25rem;
  font-size: 0.9rem;
}

.field-group input, .field-group select {
  width: 100%;
  padding: 0.5rem;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 0.9rem;
  box-sizing: border-box;
  max-width: 100%;
}

.time-fields {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 0.5rem;
  margin-bottom: 0.75rem;
}

.currency-input {
  display: flex;
  align-items: center;
  border: 1px solid #ddd;
  border-radius: 4px;
  background: white;
  width: 100%;
  box-sizing: border-box;
  max-width: 100%;
}

.currency-symbol {
  padding: 0.5rem 0.6rem;
  background: #f8f9fa;
  border-right: 1px solid #ddd;
  font-weight: 600;
  color: #666;
  font-size: 0.85rem;
}

.currency-input input {
  border: none;
  border-radius: 0 4px 4px 0;
  flex: 1;
}

.form-actions {
  text-align: center;
  margin-top: 1rem;
  padding-top: 1rem;
  border-top: 2px dashed #9caf88;
}

.primary-button {
  background: linear-gradient(135deg, #c8102e 0%, #d2691e 100%);
  color: white;
  border: none;
  padding: 0.8rem 1.5rem;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 600;
  margin-right: 1rem;
  cursor: pointer;
  text-decoration: none;
  display: inline-block;
  box-shadow: 0 4px 12px rgba(200, 16, 46, 0.3);
  transition: all 0.3s ease;
}

.primary-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(200, 16, 46, 0.4);
  color: white;
}

.secondary-button {
  background: transparent;
  color: #666;
  border: 2px solid #ddd;
  padding: 0.8rem 1.5rem;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 600;
  text-decoration: none;
  display: inline-block;
  transition: all 0.3s ease;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.secondary-button:hover {
  background: rgba(200, 16, 46, 0.1);
  color: #c8102e;
  border-color: #c8102e;
}

.error-messages {
  background-color: #f8d7da;
  border: 1px solid #f5c6cb;
  border-radius: 8px;
  padding: 1rem;
  margin-bottom: 2rem;
  color: #721c24;
}

.error-messages h3 {
  margin-top: 0;
}

/* Mobile optimization */
@media (max-width: 767px) {
  .calculator-header h1 {
    font-size: 1.8rem;
    line-height: 1.2;
  }

  .form-card {
    padding: 1rem;
    margin: 0;
  }

  .form-grid {
    gap: 1rem;
  }

  .time-fields {
    grid-template-columns: 1fr;
    gap: 0.5rem;
  }

  .form-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .primary-button, .secondary-button {
    display: block;
    width: 100%;
    margin: 0;
  }

  .field-group input, .field-group select {
    width: 100%;
    box-sizing: border-box;
  }

  .currency-input {
    width: 100%;
    box-sizing: border-box;
  }
}

.inline-link {
  color: #c8102e;
  text-decoration: none;
  font-weight: 500;
}

.inline-link:hover {
  color: #a80e26;
  text-decoration: underline;
}

</style>