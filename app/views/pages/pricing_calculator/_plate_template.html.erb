<%# Plate Template - Cloned for each plate in the calculator %>

<div class="card mb-3 border-secondary" data-plate-index="0">
  <div class="card-header bg-light d-flex justify-content-between align-items-center">
    <strong>
      <i class="bi bi-square me-1"></i>
      <span class="plate-number"><%= t('advanced_calculator.plate') %> <span class="plate-index">1</span></span>
    </strong>
    <button type="button"
            class="btn btn-sm btn-danger"
            data-action="click->advanced-calculator#removePlate">
      <i class="bi bi-trash"></i>
    </button>
  </div>
  <div class="card-body">
    <!-- Print Settings -->
    <div class="row g-3 mb-3">
      <div class="col-md-4">
        <label class="form-label">
          <%= t('advanced_calculator.plate_fields.print_time') %> (hrs)
        </label>
        <input type="number"
               class="form-control"
               name="plates[0][print_time]"
               data-action="input->advanced-calculator#calculate"
               value="2.5"
               min="0.1"
               step="0.1">
      </div>

      <div class="col-md-4">
        <label class="form-label">
          <%= t('advanced_calculator.plate_fields.power_consumption') %> (W)
        </label>
        <input type="number"
               class="form-control"
               name="plates[0][power_consumption]"
               data-action="input->advanced-calculator#calculate"
               value="200"
               min="1"
               step="1">
      </div>

      <div class="col-md-4">
        <label class="form-label">
          <%= t('advanced_calculator.plate_fields.machine_cost') %>
        </label>
        <input type="number"
               class="form-control"
               name="plates[0][machine_cost]"
               data-action="input->advanced-calculator#calculate"
               value="500"
               min="0"
               step="1">
      </div>

      <div class="col-md-4">
        <label class="form-label">
          <%= t('advanced_calculator.plate_fields.payoff_years') %>
        </label>
        <input type="number"
               class="form-control"
               name="plates[0][payoff_years]"
               data-action="input->advanced-calculator#calculate"
               value="3"
               min="0.5"
               step="0.5">
      </div>

      <div class="col-md-4">
        <label class="form-label">
          <%= t('advanced_calculator.plate_fields.prep_time') %> (hrs)
        </label>
        <input type="number"
               class="form-control"
               name="plates[0][prep_time]"
               data-action="input->advanced-calculator#calculate"
               value="0.25"
               min="0"
               step="0.05">
      </div>

      <div class="col-md-4">
        <label class="form-label">
          <%= t('advanced_calculator.plate_fields.post_time') %> (hrs)
        </label>
        <input type="number"
               class="form-control"
               name="plates[0][post_time]"
               data-action="input->advanced-calculator#calculate"
               value="0.25"
               min="0"
               step="0.05">
      </div>

      <div class="col-md-6">
        <label class="form-label">
          <%= t('advanced_calculator.plate_fields.prep_rate') %> ($/hr)
        </label>
        <input type="number"
               class="form-control"
               name="plates[0][prep_rate]"
               data-action="input->advanced-calculator#calculate"
               value="20"
               min="0"
               step="0.5">
      </div>

      <div class="col-md-6">
        <label class="form-label">
          <%= t('advanced_calculator.plate_fields.post_rate') %> ($/hr)
        </label>
        <input type="number"
               class="form-control"
               name="plates[0][post_rate]"
               data-action="input->advanced-calculator#calculate"
               value="20"
               min="0"
               step="0.5">
      </div>
    </div>

    <!-- Filaments Section -->
    <div class="filaments-section">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <label class="form-label fw-bold mb-0">
          <i class="bi bi-palette me-1"></i>
          <%= t('advanced_calculator.filaments') %>
        </label>
        <button type="button"
                class="btn btn-sm btn-outline-success"
                data-action="click->advanced-calculator#addFilament">
          <i class="bi bi-plus me-1"></i>
          <%= t('advanced_calculator.add_filament') %>
        </button>
      </div>

      <div data-filaments-container class="filaments-container">
        <!-- Filaments will be added here -->
      </div>

      <!-- Filament Template -->
      <template data-filament-template>
        <div class="row g-2 mb-2 align-items-end" data-filament-index="0">
          <div class="col-md-5">
            <label class="form-label small">
              <%= t('advanced_calculator.filament_fields.weight') %> (g)
            </label>
            <input type="number"
                   class="form-control form-control-sm"
                   name="plates[0][filaments][0][filament_weight]"
                   data-action="input->advanced-calculator#calculate"
                   value="45"
                   min="0.1"
                   step="0.1">
          </div>
          <div class="col-md-5">
            <label class="form-label small">
              <%= t('advanced_calculator.filament_fields.price_per_kg') %>
            </label>
            <input type="number"
                   class="form-control form-control-sm"
                   name="plates[0][filaments][0][filament_price]"
                   data-action="input->advanced-calculator#calculate"
                   value="25"
                   min="0"
                   step="0.1">
          </div>
          <div class="col-md-2">
            <button type="button"
                    class="btn btn-sm btn-outline-danger w-100"
                    data-action="click->advanced-calculator#removeFilament">
              <i class="bi bi-trash"></i>
            </button>
          </div>
        </div>
      </template>

      <small class="text-muted">
        <i class="bi bi-info-circle me-1"></i>
        <%= t('advanced_calculator.filaments_help') %>
      </small>
    </div>
  </div>
</div>
