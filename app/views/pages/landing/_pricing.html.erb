<%# Pricing Section - Three tiers with trust signals %>
<section class="pricing-section rounded-4 p-3 my-2 bg-light">
    <div class="container py-4">
        <div class="bg-white rounded-4 shadow-sm p-4">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center mb-5">
                    <h2 class="h1 text-primary"><%= t('landing.pricing.headline') %></h2>
                    <p class="lead text-muted"><%= t('landing.pricing.subheadline') %></p>
                </div>
            </div>

            <div class="row g-4 justify-content-center">
                <!-- Free Tier -->
                <%= render Cards::PricingTierCardComponent.new(
                    plan: "free",
                    features: {
                        name: t('landing.pricing.free.title'),
                        price: "$0",
                        limits: {
                            print_pricings: 5,
                            printers: 1,
                            filaments: 4,
                            invoices: 5
                        },
                        features: [],
                        negative_features: [
                            t('landing.pricing.free.branding')
                        ]
                    }
                ) %>

                <!-- Startup Tier -->
                <%= render Cards::PricingTierCardComponent.new(
                    plan: "startup",
                    features: {
                        name: t('landing.pricing.startup.title'),
                        price: "¥150",
                        price_amount: 150,
                        price_currency: "JPY",
                        limits: {
                            print_pricings: 50,
                            printers: 10,
                            filaments: 16,
                            invoices: Float::INFINITY
                        },
                        features: [
                            t('landing.pricing.startup.branding'),
                            t('landing.pricing.startup.ads')
                        ]
                    },
                    popular: true
                ) %>

                <!-- Pro Tier -->
                <%= render Cards::PricingTierCardComponent.new(
                    plan: "pro",
                    features: {
                        name: t('landing.pricing.pro.title'),
                        price: "¥1,500",
                        price_amount: 1500,
                        price_currency: "JPY",
                        limits: {
                            print_pricings: Float::INFINITY,
                            printers: Float::INFINITY,
                            filaments: Float::INFINITY,
                            invoices: Float::INFINITY
                        },
                        features: [
                            t('landing.pricing.pro.unlimited'),
                            t('landing.pricing.pro.branding'),
                            t('landing.pricing.pro.ads'),
                            t('landing.pricing.pro.support'),
                            t('landing.pricing.pro.analytics'),
                            t('landing.pricing.pro.features')
                        ]
                    }
                ) %>
            </div>

            <div class="row mt-5">
                <div class="col-lg-8 mx-auto text-center">
                    <div class="trust-signals">
                        <p class="text-muted mb-2">
                            <i class="bi bi-shield-check text-success me-2"></i>
                            <%= t('landing.pricing.trust_signals.no_credit_card') %>
                        </p>
                        <p class="text-muted mb-2">
                            <i class="bi bi-x-circle text-success me-2"></i>
                            <%= t('landing.pricing.trust_signals.cancel_anytime') %>
                        </p>
                        <p class="text-muted">
                            <i class="bi bi-lock-fill text-success me-2"></i>
                            <%= t('landing.pricing.trust_signals.data_private') %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>