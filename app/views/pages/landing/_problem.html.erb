<%# Problem Statement - Why current solutions don't work %>
<section class="problem-section rounded-4 p-3 my-2 bg-light">
    <div class="container py-4">
        <div class="bg-white rounded-4 shadow-sm p-4">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="h1 text-primary mb-4">
                        <%= t('landing.problem.headline') %>
                    </h2>
                    <div class="row g-4 mt-4">
                        <%= render Cards::ProblemCardComponent.new(
                            icon: "exclamation-triangle-fill",
                            icon_color: "warning",
                            title: t('landing.problem.manual_errors'),
                            description: t('landing.problem.manual_errors_desc')
                        ) %>

                        <%= render Cards::ProblemCardComponent.new(
                            icon: "lightning-charge-fill",
                            icon_color: "warning",
                            title: t('landing.problem.electricity_costs'),
                            description: t('landing.problem.electricity_costs_desc')
                        ) %>

                        <%= render Cards::ProblemCardComponent.new(
                            icon: "graph-down",
                            icon_color: "danger",
                            title: t('landing.problem.inconsistent_pricing'),
                            description: t('landing.problem.inconsistent_pricing_desc')
                        ) %>

                        <%= render Cards::ProblemCardComponent.new(
                            icon: "clock-fill",
                            icon_color: "info",
                            title: t('landing.problem.time_wasted'),
                            description: t('landing.problem.time_wasted_desc')
                        ) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>