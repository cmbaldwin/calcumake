<!DOCTYPE html>
<html>

<head>
    <title><%= content_for(:title) || "3DP - 3D Print Project Management" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag "bootstrap.min", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "forms", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "print_pricings", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "user_profiles", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "moab_theme", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
</head>

<body class="<%= content_for(:body_class) %>">
    <!-- Flash Messages -->
    <div id="flash" class="flash">
        <%= render "layouts/flash" %>
    </div>

    <div class="container">
        <header class="main-header">
            <nav class="main-nav">
                <%= link_to t('nav.brand'), root_path, class: "nav-brand" %>
                <div class="nav-links">
                    <% if user_signed_in? %>
                    <%= link_to t('nav.new_pricing'), new_print_pricing_path, class: "nav-link" %>
                    <%= link_to t('nav.my_printers'), printers_path, class: "nav-link" %>
                    <%= link_to t('nav.profile'), user_profile_path, class: "nav-link" %>
                    <%= link_to t('nav.sign_out'), destroy_user_session_path, method: :delete, class: "nav-link nav-link-secondary" %>
                    <% else %>
                    <%= link_to t('nav.sign_in'), new_user_session_path, class: "nav-link" %>
                    <%= link_to t('nav.sign_up'), new_user_registration_path, class: "nav-link nav-link-primary" %>
                    <% end %>

                    <!-- Language Selector -->
                    <div class="language-selector">
                        <%= form_with url: switch_locale_path, method: :post, local: true, class: "language-form" do |form| %>
                        <%= form.select :locale,
                    options_for_select([
                      [t('language_name', locale: :en), 'en'],
                      [t('language_name', locale: :ja), 'ja'],
                      [t('language_name', locale: :'zh-CN'), 'zh-CN'],
                      [t('language_name', locale: :hi), 'hi'],
                      [t('language_name', locale: :es), 'es'],
                      [t('language_name', locale: :fr), 'fr'],
                      [t('language_name', locale: :ar), 'ar']
                    ], I18n.locale.to_s),
                    {},
                    {
                      class: "language-select",
                      onchange: "this.form.submit();",
                      title: t('nav.language')
                    } %>
                        <% end %>
                    </div>
                </div>
            </nav>
        </header>

        <main>
            <%= yield %>
        </main>
    </div>
</body>

</html>