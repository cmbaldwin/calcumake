<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "3DP - 3D Print Project Management" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <script>
      // Auto-dismiss toast notifications
      document.addEventListener('DOMContentLoaded', function() {
        const toasts = document.querySelectorAll('.toast-notification[data-auto-dismiss]');
        
        toasts.forEach(function(toast) {
          const delay = parseInt(toast.getAttribute('data-auto-dismiss')) || 5000;
          
          setTimeout(function() {
            if (toast.parentElement) {
              toast.style.animation = window.innerWidth <= 768 ? 'toastFadeOut 0.3s ease-out forwards' : 'toastSlideOut 0.3s ease-out forwards';
              setTimeout(function() {
                if (toast.parentElement) {
                  toast.remove();
                }
              }, 300);
            }
          }, delay);
        });
      });
      
      // Handle Turbo navigation
      document.addEventListener('turbo:load', function() {
        const toasts = document.querySelectorAll('.toast-notification[data-auto-dismiss]');
        
        toasts.forEach(function(toast) {
          const delay = parseInt(toast.getAttribute('data-auto-dismiss')) || 5000;
          
          setTimeout(function() {
            if (toast.parentElement) {
              toast.style.animation = window.innerWidth <= 768 ? 'toastFadeOut 0.3s ease-out forwards' : 'toastSlideOut 0.3s ease-out forwards';
              setTimeout(function() {
                if (toast.parentElement) {
                  toast.remove();
                }
              }, 300);
            }
          }, delay);
        });
      });
    </script>
  </head>

  <body class="<%= content_for(:body_class) %>">
    <!-- Fixed position notifications -->
    <% if notice %>
      <div class="toast-notification toast-success" data-auto-dismiss="5000">
        <div class="toast-header">
          <div class="toast-title"><%= t('flash.success') %></div>
          <button class="toast-close" onclick="this.parentElement.parentElement.remove()">&times;</button>
        </div>
        <div class="toast-content">
          <%= notice %>
        </div>
      </div>
    <% end %>
    <% if alert %>
      <div class="toast-notification toast-error" data-auto-dismiss="5000">
        <div class="toast-header">
          <div class="toast-title"><%= t('flash.alert') %></div>
          <button class="toast-close" onclick="this.parentElement.parentElement.remove()">&times;</button>
        </div>
        <div class="toast-content">
          <%= alert %>
        </div>
      </div>
    <% end %>

    <div class="container">
      <header class="main-header">
        <nav class="main-nav">
          <%= link_to t('nav.brand'), root_path, class: "nav-brand" %>
          <div class="nav-links">
            <% if user_signed_in? %>
              <%= link_to t('nav.my_pricings'), print_pricings_path, class: "nav-link" %>
              <%= link_to t('nav.new_pricing'), new_print_pricing_path, class: "nav-link" %>
              <%= link_to t('nav.my_printers'), printers_path, class: "nav-link" %>
              <%= link_to t('nav.profile'), user_profile_path, class: "nav-link" %>
              <%= link_to t('nav.sign_out'), destroy_user_session_path, method: :delete, class: "nav-link nav-link-secondary" %>
            <% else %>
              <%= link_to t('nav.sign_in'), new_user_session_path, class: "nav-link" %>
              <%= link_to t('nav.sign_up'), new_user_registration_path, class: "nav-link nav-link-primary" %>
            <% end %>
            
            <!-- Language Selector -->
            <div class="language-selector">
              <%= form_with url: switch_locale_path, method: :post, local: true, class: "language-form" do |form| %>
                <%= form.select :locale, 
                    options_for_select([
                      [t('language_name', locale: :en), 'en'],
                      [t('language_name', locale: :ja), 'ja'],
                      [t('language_name', locale: :'zh-CN'), 'zh-CN'],
                      [t('language_name', locale: :hi), 'hi'],
                      [t('language_name', locale: :es), 'es'],
                      [t('language_name', locale: :fr), 'fr'],
                      [t('language_name', locale: :ar), 'ar']
                    ], I18n.locale.to_s),
                    {},
                    { 
                      class: "language-select",
                      onchange: "this.form.submit();",
                      title: t('nav.language')
                    } %>
              <% end %>
            </div>
          </div>
        </nav>
      </header>

      <main>
        <%= yield %>
      </main>
    </div>
  </body>
</html>
