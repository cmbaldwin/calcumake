<!DOCTYPE html>
<html>

<head>
    <title><%= meta_title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    
    <%# PWA Meta Tags %>
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-title" content="CalcuMake">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="theme-color" content="#0d6efd">
    
    <%# Google Analytics (GA4) %>
    <% if Rails.env.production? %>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-SBESSBTQRQ"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-SBESSBTQRQ');

      // Track landing page conversions
      function trackSignupStart() {
        gtag('event', 'signup_start', {
          event_category: 'engagement',
          event_label: 'landing_page'
        });
      }

      function trackDemoView() {
        gtag('event', 'demo_view', {
          event_category: 'engagement',
          event_label: 'landing_page'
        });
      }
    </script>
    <% end %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# SEO Meta Tags %>
    <%= meta_tags %>
    
    <%# Multi-language SEO - hreflang tags for international discovery %>
    <% I18n.available_locales.each do |locale| %>
      <link rel="alternate" hreflang="<%= locale %>" href="<%= url_for(locale: locale, only_path: false) %>" />
    <% end %>
    <link rel="alternate" hreflang="x-default" href="<%= url_for(locale: :en, only_path: false) %>" />

    <%= yield :head %>

    <%# Structured Data %>
    <script type="application/ld+json">
      <%= structured_data_organization.html_safe %>
    </script>
    <script type="application/ld+json">
      <%= structured_data_web_application.html_safe %>
    </script>
    <script type="application/ld+json">
      <%= structured_data_calculator.html_safe %>
    </script>
    <script type="application/ld+json">
      <%= structured_data_faq.html_safe %>
    </script>
    <%= yield :structured_data %>

    <%# PWA Manifest %>
    <%= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <%# Favicons and Icons %>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="192x192" href="/icon-192.png">
    <link rel="icon" type="image/png" sizes="512x512" href="/icon-512.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">

    <%# Bootstrap 5 with custom styling %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "lexxy", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
</head>

<body class="<%= content_for(:body_class) %>" data-controller="pwa-registration" data-pwa-registration-service-worker-path-value="<%= pwa_service_worker_path %>">
    <!-- Flash Messages -->
    <div id="flash">
        <%= render "layouts/flash" %>
    </div>

    <%= render "shared/navbar" %>

    <!-- Main Content Container -->
    <div class="container my-4">
        <main>
            <%= yield %>
        </main>
    </div>

    <%= render "shared/footer" %>

    <%# Reusable Modal for Turbo Frames %>
    <%= render "shared/modal" %>

    <%# GDPR Cookie Consent Banner %>
    <%= render "shared/cookie_consent" %>
</body>

</html>