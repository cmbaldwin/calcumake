<div id="stats_cards_content" class="row g-3 mb-4">
  <div class="col-6 col-lg">
    <div class="card bg-success text-white">
      <div class="card-body text-center">
        <h2 class="display-6 fw-bold mb-2"><%= print_pricings.count %></h2>
        <p class="mb-0"><%= t('print_pricing.index.total_calculations') %></p>
      </div>
    </div>
  </div>
  <div class="col-6 col-lg">
    <div class="card bg-warning text-white">
      <div class="card-body text-center">
        <h2 class="display-6 fw-bold mb-2">
          <%= total_print_time_hours(print_pricings) %>h
        </h2>
        <p class="mb-0"><%= t('print_pricing.index.total_print_time') %></p>
      </div>
    </div>
  </div>
  <div class="col-6 col-lg">
    <div class="card bg-info text-white">
      <div class="card-body text-center">
        <h2 class="display-6 fw-bold mb-2">
          <%= total_filament_weight_grams(print_pricings).round(1) %>g
        </h2>
        <p class="mb-0"><%= t('print_pricing.index.total_filament_used') %></p>
      </div>
    </div>
  </div>
  <div class="col-6 col-lg">
    <div class="card bg-primary text-white">
      <div class="card-body text-center">
        <h2 class="display-6 fw-bold mb-2">
          <%= format_currency_with_symbol(total_estimated_sales(print_pricings), current_user&.default_currency || 'USD') %>
        </h2>
        <p class="mb-0"><%= t('print_pricing.index.total_estimated_sales') %></p>
      </div>
    </div>
  </div>
  <div class="col-12 col-lg">
    <div class="card bg-dark text-white">
      <div class="card-body text-center">
        <h2 class="display-6 fw-bold mb-2">
          <%= format_currency_with_symbol(total_estimated_profit(print_pricings), current_user&.default_currency || 'USD') %>
        </h2>
        <p class="mb-0"><%= t('print_pricing.index.total_estimated_profit') %></p>
      </div>
    </div>
  </div>
</div>