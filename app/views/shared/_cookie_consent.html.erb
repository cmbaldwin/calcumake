<div data-controller="cookie-consent"
     data-cookie-consent-consent-url-value="<%= user_signed_in? ? user_consents_path : '' %>"
     data-cookie-consent-accepted-value="<%= user_signed_in? && current_user.has_accepted_cookies? %>">
  <div data-cookie-consent-target="banner"
       class="cookie-consent-banner d-none position-fixed bottom-0 start-0 end-0 bg-white shadow-lg border-top p-3 p-md-4"
       style="z-index: 9999;">
    <div class="container">
      <div class="row align-items-center g-3">
        <div class="col-lg-8">
          <h5 class="mb-2"><%= t('gdpr.cookie_consent.title') %></h5>
          <p class="mb-0 small text-muted">
            <%= t('gdpr.cookie_consent.message_html',
                  privacy_policy_link: link_to(t('gdpr.privacy_policy'), privacy_policy_path, class: 'text-primary'),
                  cookie_policy_link: link_to(t('gdpr.cookie_policy'), cookie_policy_path, class: 'text-primary')) %>
          </p>
        </div>
        <div class="col-lg-4 text-lg-end">
          <div class="d-flex gap-2 justify-content-lg-end flex-wrap">
            <button type="button"
                    class="btn btn-outline-secondary btn-sm"
                    data-action="click->cookie-consent#reject">
              <%= t('gdpr.cookie_consent.reject') %>
            </button>
            <button type="button"
                    class="btn btn-primary btn-sm"
                    data-action="click->cookie-consent#accept">
              <%= t('gdpr.cookie_consent.accept') %>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
