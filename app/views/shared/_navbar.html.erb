<!-- Bootstrap 5 Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
        <%= link_to root_path, class: "navbar-brand gap-1 d-flex align-items-center" do %>
        <%= image_tag "calcumake.svg", alt: "CalcuMake", class: "navbar-brand-logo" %>
        <span><%= t('nav.brand') %></span>
        <% end %>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <% if user_signed_in? %>
                <li class="nav-item">
                    <%= link_to t('nav.print_pricings'), print_pricings_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to t('nav.new_pricing'), new_print_pricing_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to t('nav.my_printers'), printers_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to t('nav.my_filaments'), filaments_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to t('nav.invoices'), invoices_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to t('nav.clients'), clients_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to t('nav.profile'), user_profile_path, class: "nav-link" %>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="helpDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <%= t('nav.help') %>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="helpDropdown">
                        <% if user_signed_in? %>
                        <li><%= link_to t('nav.usage_and_subscription', default: 'Usage & Subscription'), user_profile_path, class: "dropdown-item" %></li>
                        <% end %>
                        <li>
                            <h6 class="dropdown-header"><%= t('nav.legal_header', default: 'Legal & Privacy') %></h6>
                        </li>
                        <li><%= link_to t('legal.privacy_policy.nav_title'), privacy_policy_path, class: "dropdown-item" %></li>
                        <li><%= link_to t('legal.user_agreement.nav_title'), user_agreement_path, class: "dropdown-item" %></li>
                        <li><%= link_to t('legal.commerce_disclosure.nav_title'), commerce_disclosure_path, class: "dropdown-item" %></li>
                        <% if user_signed_in? %>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <h6 class="dropdown-header"><%= t('nav.data_rights_header', default: 'Your Data Rights') %></h6>
                        </li>
                        <li><%= link_to t('nav.export_data', default: 'Export My Data'), data_export_path, class: "dropdown-item" %></li>
                        <li><%= link_to t('nav.delete_account', default: 'Delete My Account'), data_deletion_path, class: "dropdown-item text-danger" %></li>
                        <% end %>
                    </ul>
                </li>
                <li class="nav-item">
                    <%= link_to t('nav.sign_out'), destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
                </li>
                <% else %>
                <li class="nav-item">
                    <%= link_to t('nav.sign_in'), new_user_session_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to t('nav.sign_up'), new_user_registration_path, class: "nav-link" %>
                </li>
                <li class="nav-item ms-2 d-flex align-items-center">
                    <%= link_to t('nav.calculate_now'), pricing_calculator_path, class: "nav-link fw-semibold border rounded px-2 py-1" %>
                </li>
                <% end %>
            </ul>

            <!-- Support Link and Language Selector -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <%= link_to t('support.nav_title'), support_path, class: "nav-link" %>
                </li>
            </ul>
            <div class="navbar-text d-flex align-items-center gap-2">
                <% if user_signed_in? %>
                <!-- Info Popups Toggle -->
                <%= link_to "#",
                    class: "text-decoration-none #{current_user.info_popups_enabled? ? 'text-primary' : 'text-muted'}",
                    data: {
                      controller: "info-toggle",
                      info_toggle_enabled_value: current_user.info_popups_enabled?,
                      info_toggle_update_url_value: toggle_info_popups_user_profile_path,
                      action: "click->info-toggle#toggle",
                      info_popups_enabled: current_user.info_popups_enabled?,
                      enable_title: t('info_popups.toggle.enable'),
                      disable_title: t('info_popups.toggle.disable'),
                      enabled_text: t('info_popups.toggle.on'),
                      disabled_text: t('info_popups.toggle.off')
                    },
                    title: current_user.info_popups_enabled? ? t('info_popups.toggle.disable') : t('info_popups.toggle.enable') do %>
                  <i class="bi <%= current_user.info_popups_enabled? ? 'bi-eye' : 'bi-eye-slash' %>"></i>
                  <span class="toggle-text d-none d-lg-inline"><%= current_user.info_popups_enabled? ? t('info_popups.toggle.on') : t('info_popups.toggle.off') %></span>
                <% end %>
                <% end %>
                <%= form_with url: switch_locale_path, method: :post, local: true, class: "d-flex" do |form| %>
                <%= render Forms::SelectFieldComponent.new(
                    form: form,
                    attribute: :locale,
                    choices: [
                      [t('language_name', locale: :en), 'en'],
                      [t('language_name', locale: :ja), 'ja'],
                      [t('language_name', locale: :'zh-CN'), 'zh-CN'],
                      [t('language_name', locale: :hi), 'hi'],
                      [t('language_name', locale: :es), 'es'],
                      [t('language_name', locale: :fr), 'fr'],
                      [t('language_name', locale: :ar), 'ar']
                    ],
                    label: false,
                    wrapper: false,
                    html_options: {
                      class: "form-select-sm",
                      onchange: "this.form.submit();",
                      title: t('nav.language'),
                      style: "width: auto;"
                    },
                    select_options: { selected: I18n.locale.to_s }
                  ) %>
                <% end %>
            </div>
        </div>
    </div>
</nav>