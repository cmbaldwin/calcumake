<div class="onboarding-step">
  <div class="text-center mb-4">
    <h2 class="display-6 fw-bold"><%= t("onboarding.company.title") %></h2>
    <p class="lead text-muted"><%= t("onboarding.company.subtitle") %></p>
    <p class="text-muted small"><%= t("onboarding.company.skip_hint") %></p>
  </div>

  <%= form_with model: current_user,
                url: onboarding_path(step: "company"),
                method: :patch,
                local: false,
                html: { class: "onboarding-form", data: { turbo: false } } do |form| %>

    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="mb-4">
          <%= form.label :default_company_name, t("onboarding.company.company_name_label"), class: "form-label fw-bold" %>
          <%= form.text_field :default_company_name,
                              class: "form-control form-control-lg",
                              placeholder: t("onboarding.company.company_name_placeholder") %>
        </div>

        <div class="mb-4">
          <%= form.label :company_logo, t("onboarding.company.company_logo_label"), class: "form-label fw-bold" %>
          <%= form.file_field :company_logo,
                              class: "form-control form-control-lg",
                              accept: "image/*" %>
          <div class="form-text"><%= t("onboarding.company.company_logo_hint") %></div>

          <% if current_user.company_logo.attached? %>
            <div class="mt-2">
              <%= image_tag current_user.company_logo, class: "img-thumbnail", style: "max-height: 100px;" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="text-center mt-4">
      <%= form.submit t("onboarding.buttons.next"), class: "btn btn-primary btn-lg px-5" %>
    </div>
  <% end %>
</div>
