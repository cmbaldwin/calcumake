<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-body p-4 p-md-5">
          <h1 class="mb-4"><%= t('gdpr.data_export.title') %></h1>

          <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            <%= t('gdpr.data_export.description') %>
          </div>

          <section class="mb-4">
            <h2 class="h5 mb-3"><%= t('gdpr.data_export.what_included') %></h2>
            <ul>
              <li><%= t('gdpr.data_export.items.account_info') %></li>
              <li><%= t('gdpr.data_export.items.print_pricings') %></li>
              <li><%= t('gdpr.data_export.items.printers') %></li>
              <li><%= t('gdpr.data_export.items.invoices') %></li>
              <li><%= t('gdpr.data_export.items.filaments') %></li>
              <li><%= t('gdpr.data_export.items.clients') %></li>
              <li><%= t('gdpr.data_export.items.consents') %></li>
            </ul>
          </section>

          <section class="mb-4">
            <h2 class="h5 mb-3"><%= t('gdpr.data_export.format') %></h2>
            <p><%= t('gdpr.data_export.format_description') %></p>
          </section>

          <div class="d-flex gap-3 mt-4">
            <%= link_to data_export_path(format: :json),
                        class: "btn btn-primary",
                        data: { turbo: false } do %>
              <i class="bi bi-download me-2"></i>
              <%= t('gdpr.data_export.download_button') %>
            <% end %>
            <%= link_to t('common.back'), :back, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
