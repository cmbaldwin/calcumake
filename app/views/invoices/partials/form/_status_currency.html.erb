<%= render Forms::SelectFieldComponent.new(
  form: form,
  attribute: :status,
  choices: invoice_status_options(invoice.status),
  label: t("invoices.fields.status"),
  wrapper_class: "col-md-6"
) %>

<%= render Forms::SelectFieldComponent.new(
  form: form,
  attribute: :currency,
  choices: currency_options,
  label: t("invoices.fields.currency"),
  prompt: "Select currency",
  hint: t("invoices.fields.currency_help"),
  wrapper_class: "col-md-6",
  select_options: { selected: invoice.currency || current_user.default_currency }
) %>
