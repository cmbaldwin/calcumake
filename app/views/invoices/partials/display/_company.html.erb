<% if user.default_company_name.present? %>
<div class="mt-3 p-3 bg-light rounded">
    <div class="row g-2">
        <% if user.company_logo.attached? %>
        <div class="col-12 mb-2">
            <%= image_tag url_for(user.company_logo),
                alt: "Company Logo",
                class: "img-fluid",
                style: "max-width: 100px; max-height: 50px; object-fit: contain;" %>
        </div>
        <% end %>
        <div class="col-12">
            <strong><%= user.default_company_name %></strong>
        </div>
        <% if user.default_company_email.present? %>
        <div class="col-12 text-muted small">
            <%= user.default_company_email %>
        </div>
        <% end %>
        <% if user.default_company_phone.present? %>
        <div class="col-12 text-muted small">
            <%= user.default_company_phone %>
        </div>
        <% end %>
    </div>
</div>
<% else %>
<div class="alert alert-warning mt-3 mb-0">
    <%= t("invoices.no_company_info") %>
</div>
<% end %>