<% content_for :title, "#{@invoice.invoice_number} - #{@print_pricing.job_name}" %>

<div data-controller="pdf-generator" data-pdf-generator-filename-value="<%= @invoice.invoice_number %>">
    <!-- Action Buttons -->
    <%= render "invoices/partials/show_header", invoice: @invoice, print_pricing: @print_pricing %>

    <!-- Invoice Content (for PDF generation and printing) -->
    <div class="invoice-content bg-white p-5 shadow-sm">
        <!-- Invoice Header -->
        <%= render "invoices/partials/invoice_header", invoice: @invoice, user: current_user %>

        <!-- Customer Information -->
        <%= render "invoices/partials/customer_info", customer_name: @print_pricing.job_name %>

        <!-- Line Items Table -->
        <%= render "invoices/partials/line_items_table", invoice: @invoice %>

        <!-- Payment Details and Notes -->
        <%= render "invoices/partials/payment_notes_display", invoice: @invoice %>
    </div>
</div>