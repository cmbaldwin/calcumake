<% content_for :title, "#{t('invoices.title')} - #{@print_pricing.job_name}" %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><%= t('invoices.title') %></h1>
                <%= link_to t('invoices.new_invoice'), new_print_pricing_invoice_path(@print_pricing), class: "btn btn-primary" %>
            </div>

            <% if @invoices&.any? %>
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th><%= t('invoices.fields.invoice_number') %></th>
                                    <th><%= t('invoices.fields.company_name') %></th>
                                    <th><%= t('invoices.fields.invoice_date') %></th>
                                    <th><%= t('invoices.fields.due_date') %></th>
                                    <th><%= t('invoices.fields.status') %></th>
                                    <th class="text-end"><%= t('print_pricing.total') %></th>
                                    <th class="text-end"><%= t('actions.title') %></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @invoices.each do |invoice| %>
                                  <%= render "invoices/partials/index_table_row", invoice: invoice, print_pricing: @print_pricing %>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <% else %>
            <div class="card">
                <div class="card-body text-center py-5">
                    <p class="text-muted mb-3"><%= t('invoices.no_invoices') %></p>
                    <%= link_to t('invoices.create_invoice'), new_print_pricing_invoice_path(@print_pricing), class: "btn btn-primary" %>
                </div>
            </div>
            <% end %>

            <div class="mt-4">
                <%= link_to t('actions.back'), print_pricing_path(@print_pricing), class: "btn btn-outline-secondary" %>
            </div>
        </div>
    </div>
</div>