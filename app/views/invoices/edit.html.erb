<% content_for :title, t("invoices.edit_invoice") %>

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><%= t("invoices.edit_invoice") %></h1>
                <%= link_to t("actions.back"), print_pricing_invoice_path(@print_pricing, @invoice), class: "btn btn-outline-secondary" %>
            </div>

            <div class="alert alert-info">
                <strong>Print Pricing:</strong> <%= @print_pricing.job_name %><br>
                <strong>Invoice:</strong> <%= @invoice.invoice_number %>
            </div>

            <%= render "form" %>
        </div>
    </div>
</div>
