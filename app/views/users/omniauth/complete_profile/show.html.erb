<%# Complete OAuth Profile - Request email for providers that don't provide it %>

<% content_for :title, t('devise.omniauth_complete_profile.title') %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <div class="text-center mb-4">
            <h1 class="h3 mb-2"><%= t('devise.omniauth_complete_profile.title') %></h1>
            <p class="text-muted mb-0">
              <%= t('devise.omniauth_complete_profile.subtitle', provider: @provider) %>
            </p>
          </div>

          <%= form_for @user, url: users_omniauth_complete_profile_path, html: { class: 'needs-validation', novalidate: true } do |f| %>
            <%= render Forms::ErrorsComponent.new(model: @user) %>

            <div class="mb-3">
              <%= f.label :email, t('devise.omniauth_complete_profile.email_label'), class: 'form-label' %>
              <%= f.email_field :email,
                  class: "form-control #{@user.errors[:email].any? ? 'is-invalid' : ''}",
                  placeholder: t('devise.omniauth_complete_profile.email_placeholder'),
                  required: true,
                  autofocus: true %>
              <div class="form-text">
                <%= t('devise.omniauth_complete_profile.email_help') %>
              </div>
              <% if @user.errors[:email].any? %>
                <div class="invalid-feedback d-block">
                  <%= @user.errors[:email].first %>
                </div>
              <% end %>
            </div>

            <div class="d-grid gap-2 mb-3">
              <%= f.submit t('devise.omniauth_complete_profile.submit'), class: 'btn btn-primary btn-lg' %>
            </div>

            <div class="text-center">
              <%= link_to t('devise.omniauth_complete_profile.cancel'), root_path, class: 'text-muted text-decoration-none small' %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="text-center mt-3">
        <small class="text-muted">
          <%= t('devise.omniauth_complete_profile.privacy_notice') %>
        </small>
      </div>
    </div>
  </div>
</div>
