<% content_for :body_class, "profile-page" %>

<!-- Header -->
<div class="text-center mb-4">
    <h1 class="display-5 fw-bold text-primary mb-2"><%= t('profile.show.title') %></h1>
    <p class="lead text-muted"><%= t('profile.show.subtitle') %></p>
</div>

<%= form_with model: @user, url: user_profile_path, method: :patch, local: true, html: { class: "row g-3" } do |form| %>
<%= render 'shared/form_errors', object: @user %>

<!-- Account Information -->
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><%= t('profile.show.account_info') %></h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <strong><%= t('profile.show.email') %>:</strong>
                    <p class="mb-0"><%= @user.email %></p>
                </div>
                <div class="col-md-6">
                    <strong><%= t('profile.show.member_since') %>:</strong>
                    <p class="mb-0"><%= @user.created_at.strftime(t('time.formats.month_day_year')) %></p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Default Preferences -->
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><%= t('profile.show.default_preferences') %></h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <%= form.label :default_currency, t('profile.fields.default_currency'), class: "form-label" %>
                    <%= form.select :default_currency,
                options_for_select(currency_options, @user.default_currency),
                { prompt: t('print_pricing.fields.currency_prompt') },
                { class: "form-select" } %>
                    <div class="form-text"><%= t('profile.fields.default_currency_help') %></div>
                </div>
                <div class="col-md-6">
                    <%= form.label :default_energy_cost_per_kwh, t('profile.fields.energy_cost'), class: "form-label" %>
                    <%= form.number_field :default_energy_cost_per_kwh,
                step: 0.001,
                min: 0.001,
                placeholder: t('profile.fields.energy_cost_placeholder'),
                class: "form-control" %>
                    <div class="form-text"><%= t('profile.fields.energy_cost_help_extended') %></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Company Information for Invoices -->
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><%= t('profile.show.company_info') %></h5>
        </div>
        <div class="card-body">
            <p class="text-muted mb-4"><%= t('profile.show.company_info_description') %></p>
            <div class="row g-3">
                <div class="col-md-6">
                    <%= form.label :default_company_name, t('profile.fields.company_name'), class: "form-label" %>
                    <%= form.text_field :default_company_name, class: "form-control", placeholder: t('profile.fields.company_name_placeholder') %>
                </div>
                <div class="col-md-6">
                    <%= form.label :default_company_email, t('profile.fields.company_email'), class: "form-label" %>
                    <%= form.email_field :default_company_email, class: "form-control", placeholder: t('profile.fields.company_email_placeholder') %>
                </div>
                <div class="col-md-6">
                    <%= form.label :default_company_phone, t('profile.fields.company_phone'), class: "form-label" %>
                    <%= form.telephone_field :default_company_phone, class: "form-control", placeholder: t('profile.fields.company_phone_placeholder') %>
                </div>
                <div class="col-md-6">
                    <%= form.label :company_logo, t('profile.fields.company_logo'), class: "form-label" %>
                    <%= render 'shared/image_upload',
                      form: form,
                      field_name: :company_logo,
                      image_url: @user.company_logo.attached? ? url_for(@user.company_logo) : nil,
                      alt_text: 'Company Logo',
                      placeholder_text: 'Drag & drop an image here or click to browse',
                      remove_text: 'Remove',
                      help_text: t('profile.image_upload.help_text') %>
                </div>
                <div class="col-12">
                    <%= form.label :default_company_address, t('profile.fields.company_address'), class: "form-label" %>
                    <%= form.text_area :default_company_address, rows: 3, class: "form-control", placeholder: t('profile.fields.company_address_placeholder') %>
                </div>
                <div class="col-12">
                    <%= form.label :default_payment_details, t('profile.fields.payment_details'), class: "form-label" %>
                    <%= form.text_area :default_payment_details, rows: 4, class: "form-control", placeholder: t('profile.fields.payment_details_placeholder') %>
                    <div class="form-text"><%= t('profile.fields.payment_details_help') %></div>
                </div>
                <div class="col-12">
                    <%= form.label :default_invoice_notes, t('profile.fields.invoice_notes'), class: "form-label" %>
                    <%= form.text_area :default_invoice_notes, rows: 3, class: "form-control", placeholder: t('profile.fields.invoice_notes_placeholder') %>
                    <div class="form-text"><%= t('profile.fields.invoice_notes_help') %></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Form Actions -->
<div class="col-12">
    <div class="d-flex gap-3 justify-content-center pt-3 border-top">
        <%= form.submit t('profile.buttons.update_settings'), class: "btn btn-primary btn-lg" %>
        <%= link_to t('actions.back'), print_pricings_path, class: "btn btn-outline-secondary btn-lg" %>
    </div>
</div>
<% end %>