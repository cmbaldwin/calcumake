<% content_for :body_class, "profile-page" %>

<!-- Header -->
<div class="text-center mb-4">
    <h1 class="display-5 fw-bold text-primary mb-2"><%= t('profile.show.title') %></h1>
    <p class="lead text-muted"><%= t('profile.show.subtitle') %></p>
</div>

<!-- Usage Dashboard Widget -->
<%= render 'shared/usage_dashboard_widget' %>

<%= form_with model: @user, url: user_profile_path, method: :patch, local: true, html: { class: "row g-3" } do |form| %>
<%= render Forms::ErrorsComponent.new(model: @user) %>

<!-- Account Information -->
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><%= t('profile.show.account_info') %></h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <strong><%= t('profile.show.email') %>:</strong>
                    <p class="mb-0"><%= @user.email %></p>
                </div>
                <div class="col-md-6">
                    <strong><%= t('profile.show.member_since') %>:</strong>
                    <p class="mb-0"><%= @user.created_at.strftime(t('time.formats.month_day_year')) %></p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Default Preferences -->
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><%= t('profile.show.default_preferences') %></h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <%= render Forms::SelectFieldComponent.new(
                  form: form,
                  attribute: :default_currency,
                  choices: currency_options,
                  label: t('profile.fields.default_currency'),
                  prompt: t('print_pricing.fields.currency_prompt'),
                  hint: t('profile.fields.default_currency_help'),
                  wrapper_class: "col-md-6",
                  select_options: { selected: @user.default_currency }
                ) %>
                <%= render Forms::FieldComponent.new(
                  form: form,
                  attribute: :default_energy_cost_per_kwh,
                  type: :number,
                  label: t('profile.fields.energy_cost'),
                  hint: t('profile.fields.energy_cost_help_extended'),
                  wrapper_class: "col-md-6",
                  options: { step: 0.001, min: 0.001, placeholder: t('profile.fields.energy_cost_placeholder') }
                ) %>
            </div>
        </div>
    </div>
</div>

<!-- Labor & Cost Defaults -->
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><%= t('profile.show.labor_defaults') %></h5>
        </div>
        <div class="card-body">
            <p class="text-muted mb-4"><%= t('profile.show.labor_defaults_description') %></p>
            <div class="row g-3">
                <%= render Forms::FieldComponent.new(
                  form: form,
                  attribute: :default_prep_time_minutes,
                  type: :number,
                  label: t('profile.fields.prep_time'),
                  hint: t('profile.fields.prep_time_help'),
                  wrapper_class: "col-md-6",
                  options: { step: 1, min: 0, placeholder: "10" }
                ) %>
                <%= render Forms::NumberFieldWithAddonComponent.new(
                  form: form,
                  attribute: :default_prep_cost_per_hour,
                  label: t('profile.fields.prep_cost'),
                  prepend: currency_symbol(@user.default_currency),
                  hint: t('profile.fields.prep_cost_help'),
                  step: 0.01,
                  min: 0,
                  placeholder: "1000",
                  wrapper_class: "col-md-6"
                ) %>
                <%= render Forms::FieldComponent.new(
                  form: form,
                  attribute: :default_postprocessing_time_minutes,
                  type: :number,
                  label: t('profile.fields.postprocessing_time'),
                  hint: t('profile.fields.postprocessing_time_help'),
                  wrapper_class: "col-md-6",
                  options: { step: 1, min: 0, placeholder: "10" }
                ) %>
                <%= render Forms::NumberFieldWithAddonComponent.new(
                  form: form,
                  attribute: :default_postprocessing_cost_per_hour,
                  label: t('profile.fields.postprocessing_cost'),
                  prepend: currency_symbol(@user.default_currency),
                  hint: t('profile.fields.postprocessing_cost_help'),
                  step: 0.01,
                  min: 0,
                  placeholder: "1000",
                  wrapper_class: "col-md-6"
                ) %>
                <%= render Forms::NumberFieldWithAddonComponent.new(
                  form: form,
                  attribute: :default_other_costs,
                  label: t('profile.fields.other_costs'),
                  prepend: currency_symbol(@user.default_currency),
                  hint: t('profile.fields.other_costs_help'),
                  step: 0.01,
                  min: 0,
                  placeholder: "450",
                  wrapper_class: "col-md-6"
                ) %>
                <%= render Forms::NumberFieldWithAddonComponent.new(
                  form: form,
                  attribute: :default_vat_percentage,
                  label: t('profile.fields.vat_percentage'),
                  append: "%",
                  hint: t('profile.fields.vat_percentage_help'),
                  step: 0.01,
                  min: 0,
                  max: 100,
                  placeholder: "20",
                  wrapper_class: "col-md-6"
                ) %>
            </div>
        </div>
    </div>
</div>

<!-- Company Information for Invoices -->
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><%= t('profile.show.company_info') %></h5>
        </div>
        <div class="card-body">
            <p class="text-muted mb-4"><%= t('profile.show.company_info_description') %></p>
            <div class="row g-3">
                <%= render Forms::FieldComponent.new(
                  form: form,
                  attribute: :default_company_name,
                  type: :text,
                  label: t('profile.fields.company_name'),
                  wrapper_class: "col-md-6",
                  options: { placeholder: t('profile.fields.company_name_placeholder') }
                ) %>
                <%= render Forms::FieldComponent.new(
                  form: form,
                  attribute: :default_company_email,
                  type: :email,
                  label: t('profile.fields.company_email'),
                  wrapper_class: "col-md-6",
                  options: { placeholder: t('profile.fields.company_email_placeholder') }
                ) %>
                <%= render Forms::FieldComponent.new(
                  form: form,
                  attribute: :default_company_phone,
                  type: :tel,
                  label: t('profile.fields.company_phone'),
                  wrapper_class: "col-md-6",
                  options: { placeholder: t('profile.fields.company_phone_placeholder') }
                ) %>
                <div class="col-md-6">
                    <%= form.label :company_logo, t('profile.fields.company_logo'), class: "form-label" %>
                    <%= render 'shared/image_upload',
                      form: form,
                      field_name: :company_logo,
                      image_url: @user.company_logo.attached? ? url_for(@user.company_logo) : nil,
                      alt_text: 'Company Logo',
                      placeholder_text: 'Drag & drop an image here or click to browse',
                      remove_text: 'Remove',
                      help_text: t('profile.image_upload.help_text') %>
                </div>
                <%= render Forms::FieldComponent.new(
                  form: form,
                  attribute: :default_company_address,
                  type: :textarea,
                  label: t('profile.fields.company_address'),
                  wrapper_class: "col-12",
                  options: { rows: 3, placeholder: t('profile.fields.company_address_placeholder') }
                ) %>
                <%= render Forms::FieldComponent.new(
                  form: form,
                  attribute: :default_payment_details,
                  type: :textarea,
                  label: t('profile.fields.payment_details'),
                  hint: t('profile.fields.payment_details_help'),
                  wrapper_class: "col-12",
                  options: { rows: 4, placeholder: t('profile.fields.payment_details_placeholder') }
                ) %>
                <%= render Forms::FieldComponent.new(
                  form: form,
                  attribute: :default_invoice_notes,
                  type: :textarea,
                  label: t('profile.fields.invoice_notes'),
                  hint: t('profile.fields.invoice_notes_help'),
                  wrapper_class: "col-12",
                  options: { rows: 3, placeholder: t('profile.fields.invoice_notes_placeholder') }
                ) %>
            </div>
        </div>
    </div>
</div>

<!-- Form Actions -->
<div class="col-12">
    <div class="d-flex gap-3 justify-content-center pt-3 border-top">
        <%= form.submit t('profile.buttons.update_settings'), class: "btn btn-primary btn-lg" %>
        <%= link_to t('actions.back'), print_pricings_path, class: "btn btn-outline-secondary btn-lg" %>
    </div>
</div>
<% end %>

<!-- Delete Account Section -->
<div class="col-12 mt-4" data-controller="delete-account">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><%= t('profile.delete_account.title') %></h5>
        </div>
        <div class="card-body">
            <div class="alert alert-danger mb-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong><%= t('profile.delete_account.warning_title') %></strong>
                <p class="mb-0 mt-2"><%= t('profile.delete_account.warning_message') %></p>
            </div>

            <p class="mb-4"><%= t('profile.delete_account.description') %></p>

            <div class="mb-3">
                <div class="form-check">
                    <input
                        class="form-check-input"
                        type="checkbox"
                        id="unlockDeleteAccount"
                        data-delete-account-target="unlockCheckbox"
                        data-action="change->delete-account#updateButtonState">
                    <label class="form-check-label" for="unlockDeleteAccount">
                        <%= t('profile.delete_account.unlock_checkbox') %>
                    </label>
                </div>
            </div>

            <div class="mb-4">
                <div class="form-check">
                    <input
                        class="form-check-input"
                        type="checkbox"
                        id="confirmDeleteAccount"
                        data-delete-account-target="confirmCheckbox"
                        data-action="change->delete-account#updateButtonState">
                    <label class="form-check-label" for="confirmDeleteAccount">
                        <%= t('profile.delete_account.confirm_checkbox') %>
                    </label>
                </div>
            </div>

            <%= button_to t('profile.delete_account.button'),
                user_profile_path,
                method: :delete,
                class: "btn btn-danger",
                disabled: true,
                data: {
                    delete_account_target: "deleteButton",
                    confirm_message: t('profile.delete_account.final_confirmation'),
                    action: "click->delete-account#confirmDelete"
                } %>
        </div>
    </div>
</div>