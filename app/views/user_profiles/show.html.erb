<% content_for :body_class, "profile-page" %>

<!-- Header -->
<div class="text-center mb-4">
    <h1 class="display-5 fw-bold text-primary mb-2"><%= t('profile.show.title') %></h1>
    <p class="lead text-muted"><%= t('profile.show.subtitle') %></p>
</div>

<%= form_with model: @user, url: user_profile_path, method: :patch, local: true, html: { class: "row g-3" } do |form| %>
<%= render 'shared/form_errors', object: @user %>

<!-- Account Information -->
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><%= t('profile.show.account_info') %></h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <strong><%= t('profile.show.email') %>:</strong>
                    <p class="mb-0"><%= @user.email %></p>
                </div>
                <div class="col-md-6">
                    <strong><%= t('profile.show.member_since') %>:</strong>
                    <p class="mb-0"><%= @user.created_at.strftime(t('time.formats.month_day_year')) %></p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Default Preferences -->
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><%= t('profile.show.default_preferences') %></h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <%= form.label :default_currency, t('profile.fields.default_currency'), class: "form-label" %>
                    <%= form.select :default_currency,
                options_for_select(currency_options, @user.default_currency),
                { prompt: t('print_pricing.fields.currency_prompt') },
                { class: "form-select" } %>
                    <div class="form-text"><%= t('profile.fields.default_currency_help') %></div>
                </div>
                <div class="col-md-6">
                    <%= form.label :default_energy_cost_per_kwh, t('profile.fields.energy_cost'), class: "form-label" %>
                    <%= form.number_field :default_energy_cost_per_kwh,
                step: 0.001,
                min: 0.001,
                placeholder: t('profile.fields.energy_cost_placeholder'),
                class: "form-control" %>
                    <div class="form-text"><%= t('profile.fields.energy_cost_help_extended') %></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Labor & Cost Defaults -->
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><%= t('profile.show.labor_defaults') %></h5>
        </div>
        <div class="card-body">
            <p class="text-muted mb-4"><%= t('profile.show.labor_defaults_description') %></p>
            <div class="row g-3">
                <div class="col-md-6">
                    <%= form.label :default_prep_time_minutes, t('profile.fields.prep_time'), class: "form-label" %>
                    <%= form.number_field :default_prep_time_minutes, step: 1, min: 0,
                        placeholder: "10", class: "form-control" %>
                    <div class="form-text"><%= t('profile.fields.prep_time_help') %></div>
                </div>
                <div class="col-md-6">
                    <%= form.label :default_prep_cost_per_hour, t('profile.fields.prep_cost'), class: "form-label" %>
                    <div class="input-group">
                        <span class="input-group-text"><%= currency_symbol(@user.default_currency) %></span>
                        <%= form.number_field :default_prep_cost_per_hour, step: 0.01, min: 0,
                            placeholder: "1000", class: "form-control" %>
                    </div>
                    <div class="form-text"><%= t('profile.fields.prep_cost_help') %></div>
                </div>
                <div class="col-md-6">
                    <%= form.label :default_postprocessing_time_minutes, t('profile.fields.postprocessing_time'), class: "form-label" %>
                    <%= form.number_field :default_postprocessing_time_minutes, step: 1, min: 0,
                        placeholder: "10", class: "form-control" %>
                    <div class="form-text"><%= t('profile.fields.postprocessing_time_help') %></div>
                </div>
                <div class="col-md-6">
                    <%= form.label :default_postprocessing_cost_per_hour, t('profile.fields.postprocessing_cost'), class: "form-label" %>
                    <div class="input-group">
                        <span class="input-group-text"><%= currency_symbol(@user.default_currency) %></span>
                        <%= form.number_field :default_postprocessing_cost_per_hour, step: 0.01, min: 0,
                            placeholder: "1000", class: "form-control" %>
                    </div>
                    <div class="form-text"><%= t('profile.fields.postprocessing_cost_help') %></div>
                </div>
                <div class="col-md-6">
                    <%= form.label :default_other_costs, t('profile.fields.other_costs'), class: "form-label" %>
                    <div class="input-group">
                        <span class="input-group-text"><%= currency_symbol(@user.default_currency) %></span>
                        <%= form.number_field :default_other_costs, step: 0.01, min: 0,
                            placeholder: "450", class: "form-control" %>
                    </div>
                    <div class="form-text"><%= t('profile.fields.other_costs_help') %></div>
                </div>
                <div class="col-md-6">
                    <%= form.label :default_vat_percentage, t('profile.fields.vat_percentage'), class: "form-label" %>
                    <div class="input-group">
                        <%= form.number_field :default_vat_percentage, step: 0.01, min: 0, max: 100,
                            placeholder: "20", class: "form-control" %>
                        <span class="input-group-text">%</span>
                    </div>
                    <div class="form-text"><%= t('profile.fields.vat_percentage_help') %></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Company Information for Invoices -->
<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><%= t('profile.show.company_info') %></h5>
        </div>
        <div class="card-body">
            <p class="text-muted mb-4"><%= t('profile.show.company_info_description') %></p>
            <div class="row g-3">
                <div class="col-md-6">
                    <%= form.label :default_company_name, t('profile.fields.company_name'), class: "form-label" %>
                    <%= form.text_field :default_company_name, class: "form-control", placeholder: t('profile.fields.company_name_placeholder') %>
                </div>
                <div class="col-md-6">
                    <%= form.label :default_company_email, t('profile.fields.company_email'), class: "form-label" %>
                    <%= form.email_field :default_company_email, class: "form-control", placeholder: t('profile.fields.company_email_placeholder') %>
                </div>
                <div class="col-md-6">
                    <%= form.label :default_company_phone, t('profile.fields.company_phone'), class: "form-label" %>
                    <%= form.telephone_field :default_company_phone, class: "form-control", placeholder: t('profile.fields.company_phone_placeholder') %>
                </div>
                <div class="col-md-6">
                    <%= form.label :company_logo, t('profile.fields.company_logo'), class: "form-label" %>
                    <%= render 'shared/image_upload',
                      form: form,
                      field_name: :company_logo,
                      image_url: @user.company_logo.attached? ? url_for(@user.company_logo) : nil,
                      alt_text: 'Company Logo',
                      placeholder_text: 'Drag & drop an image here or click to browse',
                      remove_text: 'Remove',
                      help_text: t('profile.image_upload.help_text') %>
                </div>
                <div class="col-12">
                    <%= form.label :default_company_address, t('profile.fields.company_address'), class: "form-label" %>
                    <%= form.text_area :default_company_address, rows: 3, class: "form-control", placeholder: t('profile.fields.company_address_placeholder') %>
                </div>
                <div class="col-12">
                    <%= form.label :default_payment_details, t('profile.fields.payment_details'), class: "form-label" %>
                    <%= form.text_area :default_payment_details, rows: 4, class: "form-control", placeholder: t('profile.fields.payment_details_placeholder') %>
                    <div class="form-text"><%= t('profile.fields.payment_details_help') %></div>
                </div>
                <div class="col-12">
                    <%= form.label :default_invoice_notes, t('profile.fields.invoice_notes'), class: "form-label" %>
                    <%= form.text_area :default_invoice_notes, rows: 3, class: "form-control", placeholder: t('profile.fields.invoice_notes_placeholder') %>
                    <div class="form-text"><%= t('profile.fields.invoice_notes_help') %></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Form Actions -->
<div class="col-12">
    <div class="d-flex gap-3 justify-content-center pt-3 border-top">
        <%= form.submit t('profile.buttons.update_settings'), class: "btn btn-primary btn-lg" %>
        <%= link_to t('actions.back'), print_pricings_path, class: "btn btn-outline-secondary btn-lg" %>
    </div>
</div>
<% end %>

<!-- Delete Account Section -->
<div class="col-12 mt-4" data-controller="delete-account">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><%= t('profile.delete_account.title') %></h5>
        </div>
        <div class="card-body">
            <div class="alert alert-danger mb-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong><%= t('profile.delete_account.warning_title') %></strong>
                <p class="mb-0 mt-2"><%= t('profile.delete_account.warning_message') %></p>
            </div>

            <p class="mb-4"><%= t('profile.delete_account.description') %></p>

            <div class="mb-3">
                <div class="form-check">
                    <input
                        class="form-check-input"
                        type="checkbox"
                        id="unlockDeleteAccount"
                        data-delete-account-target="unlockCheckbox"
                        data-action="change->delete-account#updateButtonState">
                    <label class="form-check-label" for="unlockDeleteAccount">
                        <%= t('profile.delete_account.unlock_checkbox') %>
                    </label>
                </div>
            </div>

            <div class="mb-4">
                <div class="form-check">
                    <input
                        class="form-check-input"
                        type="checkbox"
                        id="confirmDeleteAccount"
                        data-delete-account-target="confirmCheckbox"
                        data-action="change->delete-account#updateButtonState">
                    <label class="form-check-label" for="confirmDeleteAccount">
                        <%= t('profile.delete_account.confirm_checkbox') %>
                    </label>
                </div>
            </div>

            <%= button_to t('profile.delete_account.button'),
                user_profile_path,
                method: :delete,
                class: "btn btn-danger",
                disabled: true,
                data: {
                    delete_account_target: "deleteButton",
                    confirm_message: t('profile.delete_account.final_confirmation'),
                    action: "click->delete-account#confirmDelete"
                } %>
        </div>
    </div>
</div>