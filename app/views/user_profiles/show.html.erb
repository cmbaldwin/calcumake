<% content_for :title, "User Profile" %>

<div class="calculator-header" style="text-align: center; margin-bottom: 3rem;">
  <h1 style="color: var(--primary); font-size: 2.8rem; font-weight: 800;">
    User Profile
  </h1>
  <p style="color: var(--text-secondary); font-size: 1.1rem;">
    View your profile settings
  </p>
</div>

<div class="form-section" style="background: white; border-radius: 16px; padding: 2rem; margin-bottom: 2rem; box-shadow: 0 4px 20px var(--shadow);">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 style="color: var(--primary); margin: 0;">
      Default Settings
    </h3>
    <%= link_to "Edit Profile", edit_user_profile_path, class: "btn btn-primary" %>
  </div>
  
  <div class="row">
    <div class="column column-50">
      <p><strong>Email:</strong> <%= @user.email %></p>
      <p><strong>Default Currency:</strong> <%= @user.default_currency || "Not set" %></p>
      <p><strong>Default Energy Cost per kWh:</strong> <%= @user.default_energy_cost_per_kwh || "Not set" %></p>
    </div>
    <div class="column column-50">
      <% if @user.default_company_name.present? %>
        <p><strong>Company Name:</strong> <%= @user.default_company_name %></p>
      <% end %>
      <% if @user.default_company_email.present? %>
        <p><strong>Company Email:</strong> <%= @user.default_company_email %></p>
      <% end %>
      <% if @user.default_company_phone.present? %>
        <p><strong>Company Phone:</strong> <%= @user.default_company_phone %></p>
      <% end %>
    </div>
  </div>
</div>
