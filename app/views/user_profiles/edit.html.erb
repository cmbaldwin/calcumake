<div class="calculator-header">
  <h1>
    User Profile Settings
  </h1>
  <p>
    Configure your default preferences
  </p>
</div>

<%= form_with model: @user, url: user_profile_path, method: :patch, local: true do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-section">
    <h3>
      Default Settings
    </h3>
    <div class="row">
      <div class="column column-50">
        <%= render Forms::SelectFieldComponent.new(
          form: form,
          attribute: :default_currency,
          choices: currency_options,
          label: "Default Currency",
          prompt: "Select currency",
          hint: "This will be used as the default currency for new pricing calculations.",
          wrapper: false,
          select_options: { selected: @user.default_currency }
        ) %>
      </div>
      <div class="column column-50">
        <%= render Forms::FieldComponent.new(
          form: form,
          attribute: :default_energy_cost_per_kwh,
          type: :number,
          label: "Default Energy Cost per kWh",
          hint: "Your local electricity cost per kilowatt-hour. This will be used as the default for new calculations.",
          wrapper: false,
          options: { step: 0.001, min: 0.001, placeholder: "0.120", class: "text-end" }
        ) %>
      </div>
    </div>
  </div>

  <div class="form-section">
    <h3>Labor & Cost Defaults</h3>
    <p class="form-text">These values will be pre-filled when creating new print pricing calculations.</p>

    <div class="row">
      <div class="column column-50">
        <%= render Forms::FieldComponent.new(
          form: form,
          attribute: :default_prep_time_minutes,
          type: :number,
          label: "Prep Time (minutes)",
          hint: "Time spent preparing prints before starting.",
          wrapper: false,
          options: { step: 1, min: 0, placeholder: "10", class: "text-end" }
        ) %>
      </div>
      <div class="column column-50">
        <%= render Forms::NumberFieldWithAddonComponent.new(
          form: form,
          attribute: :default_prep_cost_per_hour,
          label: "Prep Cost per Hour",
          hint: "Hourly rate for preparation work.",
          prepend: currency_symbol(@user.default_currency),
          wrapper: false,
          options: { step: 0.01, min: 0, placeholder: "1000", class: "text-end" }
        ) %>
      </div>
    </div>

    <div class="row">
      <div class="column column-50">
        <%= render Forms::FieldComponent.new(
          form: form,
          attribute: :default_postprocessing_time_minutes,
          type: :number,
          label: "Post-processing Time (minutes)",
          hint: "Time spent on post-processing (cleaning, support removal, etc.).",
          wrapper: false,
          options: { step: 1, min: 0, placeholder: "10", class: "text-end" }
        ) %>
      </div>
      <div class="column column-50">
        <%= render Forms::NumberFieldWithAddonComponent.new(
          form: form,
          attribute: :default_postprocessing_cost_per_hour,
          label: "Post-processing Cost per Hour",
          hint: "Hourly rate for post-processing work.",
          prepend: currency_symbol(@user.default_currency),
          wrapper: false,
          options: { step: 0.01, min: 0, placeholder: "1000", class: "text-end" }
        ) %>
      </div>
    </div>

    <div class="row">
      <div class="column column-50">
        <%= render Forms::NumberFieldWithAddonComponent.new(
          form: form,
          attribute: :default_other_costs,
          label: "Other Costs",
          hint: "Additional costs like packaging, shipping preparation, etc.",
          prepend: currency_symbol(@user.default_currency),
          wrapper: false,
          options: { step: 0.01, min: 0, placeholder: "450", class: "text-end" }
        ) %>
      </div>
      <div class="column column-50">
        <%= render Forms::NumberFieldWithAddonComponent.new(
          form: form,
          attribute: :default_vat_percentage,
          label: "VAT Percentage",
          hint: "Default VAT/tax percentage for your location.",
          append: "%",
          wrapper: false,
          options: { step: 0.01, min: 0, max: 100, placeholder: "20", class: "text-end" }
        ) %>
      </div>
    </div>

    <div class="row">
      <div class="column column-50">
        <%= render Forms::NumberFieldWithAddonComponent.new(
          form: form,
          attribute: :default_filament_markup_percentage,
          label: t('profile.fields.default_filament_markup'),
          hint: t('profile.fields.default_filament_markup_help'),
          append: "%",
          wrapper: false,
          options: { step: 1, min: 0, max: 500, placeholder: "20", class: "text-end" }
        ) %>
      </div>
    </div>
  </div>

  <%= render Forms::FormActionsComponent.new(
    form: form,
    submit_text: "Update Profile",
    cancel_url: user_profile_path,
    submit_class: "btn button-primary",
    cancel_class: "btn button-clear",
    wrapper_class: "form-actions"
  ) %>
<% end %>
